# API Configuration
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_API_TIMEOUT=30000

# Application Configuration
REACT_APP_APP_NAME=ChurchConnect DBMS
REACT_APP_APP_VERSION=1.0.0
REACT_APP_CHURCH_NAME=Your Church Name
REACT_APP_CHURCH_LOGO=logo.png

# Feature Flags
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_OFFLINE_MODE=false
REACT_APP_ENABLE_ANALYTICS=false

# External Services
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
REACT_APP_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# Development
REACT_APP_DEBUG=false
REACT_APP_LOG_LEVEL=info

# Security
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_CSRF_HEADER_NAME=X-CSRFToken

# Notification Settings
REACT_APP_TOAST_DURATION=5000
REACT_APP_NOTIFICATION_SOUND=true

# Form Configuration
REACT_APP_FORM_AUTO_SAVE=true
REACT_APP_FORM_AUTO_SAVE_INTERVAL=30000
REACT_APP_MAX_FILE_SIZE=5242880

# Pagination
REACT_APP_DEFAULT_PAGE_SIZE=25
REACT_APP_MAX_PAGE_SIZE=100

# Date/Time Format
REACT_APP_DATE_FORMAT=MM/dd/yyyy
REACT_APP_TIME_FORMAT=HH:mm
REACT_APP_TIMEZONE=America/New_York
