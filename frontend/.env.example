# ChurchConnect DBMS Frontend Environment Variables
# Copy this file to .env.local and update with your actual values

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:3000/api
REACT_APP_API_TIMEOUT=30000

# Authentication
REACT_APP_JWT_SECRET=your-jwt-secret-key-here
REACT_APP_TOKEN_REFRESH_INTERVAL=900000
REACT_APP_SESSION_TIMEOUT=3600000

# Application Settings
REACT_APP_APP_NAME=ChurchConnect DBMS
REACT_APP_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Feature Flags
REACT_APP_ENABLE_REGISTRATION=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_BULK_ACTIONS=true

# Pagination Settings
REACT_APP_DEFAULT_PAGE_SIZE=25
REACT_APP_MAX_PAGE_SIZE=100

# File Upload Settings
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# External Services
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
REACT_APP_RECAPTCHA_SITE_KEY=your-recaptcha-site-key

# Email/SMS Integration
REACT_APP_EMAIL_SERVICE_ENABLED=false
REACT_APP_SMS_SERVICE_ENABLED=false

# Analytics
REACT_APP_GOOGLE_ANALYTICS_ID=your-ga-tracking-id
REACT_APP_ENABLE_ANALYTICS=false

# Debugging
REACT_APP_DEBUG_MODE=true
REACT_APP_LOG_LEVEL=info

# Theme Configuration
REACT_APP_PRIMARY_COLOR=#2563eb
REACT_APP_SECONDARY_COLOR=#64748b
REACT_APP_ACCENT_COLOR=#059669

# Localization
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,es,fr

# Church Information
REACT_APP_CHURCH_NAME=Your Church Name
REACT_APP_CHURCH_EMAIL=contact@yourchurch.org
REACT_APP_CHURCH_PHONE=+1-555-123-4567
REACT_APP_CHURCH_ADDRESS=123 Main St, City, State 12345

# Social Media
REACT_APP_FACEBOOK_URL=https://facebook.com/yourchurch
REACT_APP_TWITTER_URL=https://twitter.com/yourchurch
REACT_APP_INSTAGRAM_URL=https://instagram.com/yourchurch

# Development Only
REACT_APP_MOCK_API=false
REACT_APP_SKIP_AUTH=false