# ChurchConnect DBMS Environment Configuration

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=true
USE_HTTPS=false

# Database Configuration
DB_NAME=churchconnect_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# SSL/HTTPS Configuration (Development)
SSL_CERT_PATH=ssl/cert.pem
SSL_KEY_PATH=ssl/key.pem

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@churchconnect.com

# Church Information
CHURCH_NAME=Your Church Name
CHURCH_ADDRESS=123 Church St, City, State 12345
CHURCH_PHONE=(123) 456-7890
CHURCH_EMAIL=info@yourchurch.com

# External Services
REDIS_URL=redis://127.0.0.1:6379/0

# Security Settings (Production)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000

# Development Options
# Set to true to enable HTTPS in development
# Requires SSL certificates (run generate_ssl.sh)
DEVELOPMENT_HTTPS=false